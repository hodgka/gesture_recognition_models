{
    "name": "GesturePredictor",
    "n_gpu": 1,

    "arch": {
        "type": "ResNet3D",
        "args": {
            "num_classes": 26
        }
    },
    "train_data_loader": {
        "type": "JesterDataLoader",
        "args": {
            "data_dir": "data/20BNJESTER/20bn-jester-v1",
            "batch_size": 10,
            "shuffle": true,
            "val_split": 0.0,
            "num_workers": 2
        }
    },
    "val_data_loader": {
        "type": "JesterDataLoader",
        "args": {
            "data_dir": "data/20BNJESTER/",
            "batch_size": 128,
            "shuffle": true,
            "val_split": 0.0,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "top_1_acc", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 1000,
        "save_dir": "saved/",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "visualization": {
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}