{
    "name": "GesturePredictor",
    "n_gpu": 1,

    "arch": {
        "type": "resnet10",
        "args": {
            "sample_size": 84,
            "sample_duration": 16,
            "num_classes": 27
        }
    },
    "train_data_loader": {
        "type": "JesterDataLoader",
        "args": {
            "data_dir": "data/20BNJESTER/20bn-jester-v1",
            "batch_size": 32,
            "shuffle": true,
            "val_split": 0.0,
            "num_workers": 4
        }
    },
    "val_data_loader": {
        "type": "JesterDataLoader",
        "args": {
            "data_dir": "data/20BNJESTER/20bn-jester-v1",
            "batch_size": 32,
            "shuffle": true,
            "val_split": 0.0,
            "num_workers": 4,
            "split": "val"
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 5e-3,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "nll_loss",
    "metrics": [
        "top_1_acc", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.01
        }
    },
    "trainer": {
        "epochs": 1000,
        "save_dir": "resnet10/larger_crop",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "visualization": {
        "tensorboardX": true,
        "log_dir": "resnet10/runs/larger_crop"
    }
}